@using UB.DLL.Model;
@model IEnumerable<Mdl_Inv_InvoiceHead>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">Invoices</h3>
        <a href="@Url.Action("Create", "Invoice")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Invoice
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Invoice ID</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Invoice Date</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var invoice in Model)
                    {
                                <tr>
                                    <td>@invoice.InvoiceId</td>
                                    <td>@invoice.CustomerName</td>
                                    <td>@invoice.InvoiceDate.ToString("dd-MMM-yyyy")</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Details", "Invoice", new { id = invoice.InvoiceId })" 
                                           class="btn btn-info btn-sm me-1" data-bs-toggle="tooltip" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditDetail", "Invoice", new { id = invoice.InvoiceId })" 
                                           class="btn btn-warning btn-sm me-1" data-bs-toggle="tooltip" title="Edit Invoice">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form action="@Url.Action("Delete", "Invoice", new { id = invoice.InvoiceId })" 
                                              method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm" data-bs-toggle="tooltip" 
                                                    title="Delete Invoice" onclick="return confirm('Are you sure?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                    }
                }
                else
                {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No invoices available.</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
