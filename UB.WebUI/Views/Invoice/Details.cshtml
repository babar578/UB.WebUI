@using UB.DLL.Model;
@model InvoiceDetailViewModel

<div class="container mt-4">
    <!-- Invoice Header -->
    <h3>Invoice Details</h3>
    <div class="card">
        <div class="card-body">
            <p><strong>Invoice ID:</strong> @Model.Invoice.InvoiceId</p>
            <p><strong>Customer Name:</strong> @Model.Invoice.CustomerName</p>
            <p><strong>Invoice Date:</strong> @Model.Invoice.InvoiceDate.ToString("dd-MMM-yyyy")</p>
        </div>
    </div>

    <!-- Invoice Details -->
    <h5 class="mt-4">Products</h5>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detail in Model.InvoiceDetails)
            {
                <tr>
                    <td>@detail.ProductId</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.UnitPrice.ToString("C")</td>
                    <td>@(detail.Quantity * detail.UnitPrice).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add Detail Form -->
    <h5>Add Product</h5>
    <form asp-action="AddDetail" method="post">
        <!-- Pass InvoiceId correctly -->
        <input type="hidden" name="InvoiceId" value="@Model.Invoice.InvoiceId" />

        <div class="form-group">
            <label for="ProductId">Product</label>
            <select asp-for="ProductId" asp-items="Model.Products" class="form-control">
                <option value="">Select a product</option> <!-- Default option -->
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnitPrice" class="control-label"></label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
