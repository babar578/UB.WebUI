@using UB.DLL.Model;
@model Products

<div class="container my-4">
    <h2 class="fw-bold">Product Details</h2>

    <!-- Product Details -->
    <div class="card mb-4">
        <div class="card-body">
            <p><strong>Product Name:</strong> @Model.Name</p>

            <p><strong>Price:</strong> @Model.Price.ToString("C")</p> <!-- Formatted Price -->
        </div>
    </div>

    <!-- Back to List Button -->
    <a class="btn btn-primary" href="/Setup_Product">Back to List</a>
</div>
